<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <android.support.v7.widget.CardView
            android:id="@+id/trade_title_find_card"
            style="@style/ClickableCardStyle"
            android:layout_below="@id/title_buy_card"
            app:layout_heightPercent="60%"
            app:layout_marginPercent="5%"
            app:layout_widthPercent="40%">

            <TextView
                style="@style/TitleStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableBottom="@drawable/ic_search_black_48dp"
                android:drawablePadding="@dimen/activity_vertical_margin"
                android:gravity="center"
                android:padding="@dimen/activity_vertical_margin"
                android:text="@string/find_a_book" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/trade_title_post_card"
            style="@style/ClickableCardStyle"
            android:layout_below="@id/title_buy_card"
            android:layout_toEndOf="@id/trade_title_find_card"
            android:layout_toRightOf="@id/trade_title_find_card"
            app:layout_heightPercent="60%"
            app:layout_marginPercent="5%"
            app:layout_widthPercent="40%">

            <TextView
                style="@style/TitleStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableBottom="@drawable/ic_mode_edit_black_48dp"
                android:drawablePadding="@dimen/activity_vertical_margin"
                android:gravity="center"
                android:padding="@dimen/activity_vertical_margin"
                android:text="@string/post_a_book" />

        </android.support.v7.widget.CardView>

    </android.support.percent.PercentRelativeLayout>


</FrameLayout>